    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建立會議"
        android:id="@+id/createButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="會議日期"
        android:id="@+id/dateText"
        android:textColor="@color/black_50"
        android:layout_below="@+id/meetingNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dateTextView"
        android:textColor="@color/black_95"
        android:hint="選擇日期"
        android:layout_alignTop="@+id/dateText"
        android:layout_alignLeft="@+id/timeSpinner"
        android:layout_alignStart="@+id/timeSpinner"
        android:layout_alignRight="@+id/meetingNameText"
        android:layout_alignEnd="@+id/meetingNameText"
        android:textAlignment="viewEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="會議時間"
        android:id="@+id/timeText"
        android:textColor="@color/black_50"
        android:layout_below="@+id/dateTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/timeTextView"
        android:layout_toStartOf="@+id/timeTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/timeTextView"
        android:hint="選擇時間"
        android:textColor="@color/black_95"
        android:layout_alignTop="@+id/timeText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/checkBox"
        android:textAlignment="viewEnd"
        android:layout_toRightOf="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開會通知"
        android:id="@+id/checkBox"
        android:layout_below="@+id/timeTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="true"
        android:checked="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeSpinner"
        android:layout_below="@+id/timeTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:textAlignment="viewEnd" />

</RelativeLayout>
